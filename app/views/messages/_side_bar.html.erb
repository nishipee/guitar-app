<div class="top-bar">
  <div class="user_name">
    <%= link_to current_user.name, edit_user_path(current_user.id) %>
  </div>
  <div class="create_chat">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>
<div class="room-bar">
  <% current_user.rooms.each do |room| %>
    <div class="rooms">
      <div class="room_name">
        <a href=""><%= room.name %></a>
      </div>
    </div>
  <% end %>
</div>